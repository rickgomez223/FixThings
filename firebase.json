{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "emailCustomerLead" // Redirect to Firebase Function
      },
      {
        "source": "/app",
        "destination": "/app/app.html" // Redirect to static file
      },
      {
        "source": "/calendar",
        "destination": "/src/calendar/calendar.html" // Catch-all for SPA routing
      },
      {
        "source": "**",
        "destination": "/index.html" // Catch-all for SPA routing
      } 
    ]
},
  "storage": {
    "rules": "storage.rules"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
